{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "npx node-pre-gyp build -j max",
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/build"
        ]
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Configure Release",
      "type": "shell",
      "command": "npx node-pre-gyp configure",
      "problemMatcher": []
    },
    {
      "label": "Configure Debug",
      "type": "shell",
      "command": "npx node-pre-gyp configure --debug",
      "problemMatcher": []
    },
    {
      "label": "Configure Debug with logging",
      "type": "shell",
      "command": "npx node-pre-gyp configure --debug --enable_logging",
      "problemMatcher": []
    },
    {
      "label": "Configure Debug with logging and ASAN",
      "type": "shell",
      "command": "npx node-pre-gyp configure --debug --enable_logging --enable_asan",
      "problemMatcher": []
    }
  ]
}